<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_tax_form_inherit_account" model="ir.ui.view">
        <field name="name">account.tax.view.form.inherit</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field['name']" position="before">
                <field name="code" />
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="arabic_name" />
            </xpath>
            <xpath expr="//notebook" position="before">
                <group string="Tax Subtype">
                    <field name="subtype_code" />
                    <field name="subtype_name" />
                    <field name="subtype_arabic_name" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
